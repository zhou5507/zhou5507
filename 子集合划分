#include <iostream>
#include <vector>
using namespace std;
long long WX(int n) {
    if (n == 0) {
        return 1;
    }
    vector<vector<long long>> S(n + 1, vector<long long>(n + 1, 0));
    for (int i = 0; i <= n; i++) {
        S[i][i] = 1;
        if (i >= 1) {
            S[i][1] = 1;
        }
    }
    for (int i = 2; i <= n; i++) {
        for (int j = 2; j < i; j++) {
            S[i][j] = S[i-1][j-1] + j * S[i-1][j];
        }
    }
    long long B = 0;
    for (int k = 1; k <= n; k++) {
        B += S[n][k];
    }
    return B;
}
int main() {
    int n;
    while (cin >> n) {
        if (n == -1) {
            return 0;
        }
        cout << WX(n) << endl;
    }
    return 0;
}
