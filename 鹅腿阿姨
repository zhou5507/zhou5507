#include <iostream>
#include <vector>
using namespace std;
int main()
{
    int n{0}, m{0};
    vector<int> A;
    cin >> n;
    for (int i{0}; i < n; i++)
    {
        int t{0};
        cin >> t;
        if (t == 1)
        {
            A.push_back(i);
        }
        else
            m++;
    }
    if (m == n)
    {
        if (n >= 3)
        {
            cout << "0" << endl;
            return 0;
        }
        else
        {
            cout << "1" << endl;
            return 0;
        }
    }
    int L{0};
    L = A.size();
    if (n - A[L - 1] > 3 || A[0] >= 3)
    {
        cout << "0" << endl;
        return 0;
    }
    for (int i{0}; i < L - 1; i++)
    {
        if (A[i + 1] - A[i] > 3)
        {
            cout << "0" << endl;
            return 0;
        }
    }
    cout << "1" << endl;
}
