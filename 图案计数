#include <iostream>
#include <queue>
using namespace std;
char A[200][200]{};
int k{0};
int dx[8]{1, -1, 0, 0,1,1,-1,-1};
int dy[8]{0, 0, 1, -1,1,-1,1,-1};
void wx(int x, int y)
{
    queue<int> Q1, Q2;
    Q1.push(x);
    Q2.push(y);
    while (!Q1.empty())
    {
        int a = Q1.front();
        int b = Q2.front();
        Q1.pop();
        Q2.pop();
        for (int i{0}; i < 8; i++)
        {
            int c = a + dx[i];
            int d = b + dy[i];
            if (A[c][d] == '#')
            {
                A[c][d] = '-';
                Q1.push(c);
                Q2.push(d);
            }
        }
    }
}
int main()
{
    int m{0}, n{0};
    cin >> m >> n;
    for (int i{0}; i < m + 2; i++)
    {
        for (int j{0}; j < n + 2; j++)
        {
            A[i][j] = '-';
        }
    }
    for (int i{0}; i < m; i++)
    {
        for (int j{0}; j < n; j++)
        {
            cin >> A[i + 1][j + 1];
        }
    }
    for (int i{0}; i < m; i++)
    {
        for (int j{0}; j < n; j++)
        {
            if (A[i+1][j+1] == '#')
            {
                A[i+1][j+1] = '-';
                k++;
                wx(i+1, j+1);
            }
        }
    }
    cout << k << endl;
}
