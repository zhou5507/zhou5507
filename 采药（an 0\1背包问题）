#include <iostream>
#include <algorithm>
using namespace std;
int main() {
	int T{ 0 }, M{ 0 };
	cin >> T >> M;
	int A[100]{}, B[100]{};
	for (int i{ 0 };i < M;i++) {
		cin >> A[i] >> B[i];
	}
	int G[1001]{};
	for (int i{ 0 };i < M;i++) {
		int t = A[i];
		int m = B[i];
		for (int j{ T };j >= t;j--) {
			G[j] = max(G[j], G[j - t] + m);
		}
	}
	cout << G[T] << endl;
}
